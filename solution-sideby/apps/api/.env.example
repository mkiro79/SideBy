# Server Configuration
PORT=[port]
NODE_ENV=[environment]

# MongoDB Configuration
# For local development (without Docker)
# MONGO_URI=mongodb://localhost:[port]/[BdD]
# For Docker development (uncomment when using docker-compose)
MONGO_URI=mongodb://[USERNAME]:[PASSWORD]@mongo:27017/[BdD]?authSource=[USERNAME]

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d

# CORS Configuration
CORS_ORIGIN=http://localhost:[PORT]

# Google OAuth Configuration
GOOGLE_CLIENT_ID=

# Development-only bypass for Google OAuth (use with caution!)
# Set to 'true' only in local development environments to enable mock authentication
# This should NEVER be enabled in staging or production environments
ALLOW_GOOGLE_AUTH_BYPASS=false

# Logging
LOG_LEVEL=info

# Insights LLM Configuration
INSIGHTS_LLM_ENABLED=false
INSIGHTS_LLM_PROVIDER=ollama
INSIGHTS_LLM_BASE_URL=http://localhost:11434/v1
INSIGHTS_LLM_MODEL=gemma2:9b #qwen2.5:7b-instruct
INSIGHTS_LLM_API_KEY=ollama
INSIGHTS_LLM_TIMEOUT_MS=120000
INSIGHTS_LLM_PROMPT_VERSION=v1
INSIGHTS_SUMMARY_CACHE_TTL_SECONDS=86400

# Seed Configuration
SEED_ADMIN_EMAIL=
SEED_ADMIN_PASSWORD=
SEED_ADMIN_GOOGLE_ID=
SEED_ADMIN_NAME=

GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
